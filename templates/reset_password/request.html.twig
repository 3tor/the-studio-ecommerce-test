{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    {# <h1>Reset your password</h1> #}
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
            <div class="">
                <div class="card bg-light mb-3 mt-5" style="width: 800px;">
                <div class="card-body">
                    <div class="card-header mb-3">Reset your password</div>
                        {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                Enter your email address and we we will send you a
                                link to reset your password.
                            </small>
                        </div>

                        <button class="btn btn-primary mt-3">Send password reset email</button>
                        {{ form_end(requestForm) }}
                </div>
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}