<div class="row">
    <div class="col-md-10 ml-md-auto">
      <div class="">
      <a href="{{path('categories')}}">Back to Categories</a>
        <div class="card bg-light mb-3 mt-5" style="width: 800px;">
          <div class="card-body">
            <div class="card-header mb-3">{{header}}</div>
            {{ form_start(form) }}
                <div class="form-group">
                  {{ form_label(form.name) }}
                  {{ form_widget(form.name, {
                      'attr': {
                          'class': 'form-control ' ~ (form.name.vars.valid ? '' : 'is-invalid')
                      }
                  }) }}
                  <div class="invalid-feedback">
                      {{ form_errors(form.name) }}
                  </div>
                </div>
                <button class="btn btn-primary mt-3">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
</div>